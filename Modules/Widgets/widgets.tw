<<widget "buff">>
	<<set _type = $args[0]>>
	<<if $args.length > 1>><<set _amount = $args[1]>><</if>>
	<<if $args.length > 2>><<set _length = $args[2]>><</if>>
	
	<<switch _type>>
	
	<<case "str">>
