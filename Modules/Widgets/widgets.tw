<<widget "doGld">>
	<<set _gold = Math.round($args[0])>>
	
	/*Prevents you from losing more gold than you have*/
	<<if _gold < 0 and $gld + _gold < 0>>
		<<set _gold = $gld>>
	<</if>>
	
	<<set $gld += _gold>>
	<<if $gld <= 0>><<set $gld = 0>><</if>>
	
	<<if _gold < 0>>
		<<set _gold *= -1>>
		<li>You lost ''_gold gold!''</li>
	<<else>>
		<li>You got ''_gold gold.''</li>
	<</if>>
	
<</widget>>

