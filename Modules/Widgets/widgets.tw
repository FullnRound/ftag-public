			<<set _amount = "+"+_amount>>
		<</if>>
		<li>Bloat venom _amount</li>
	
	<<case "poison">>
		<<set $status.poison += _amount>>
		<<if _amount >= 0>>
			<<set _amount = "+"+_amount>>
		<</if>>
		<li>Poison _amount</li>
	<</switch>>
	
	<<updateStats>>

